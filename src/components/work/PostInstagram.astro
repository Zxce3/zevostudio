---
// import { work } from "../../data/work.json";
import { igposts } from "@/data/instagram.json"
---

<section class="md:px-12 sm:px-8 relative border-zinc-700 2xl:border-x">
  <div class="border-x border-zinc-700 h-12"></div>
</section>
<section
  class="md:px-12 sm:px-8 relative border-y border-zinc-700 2xl:border-x"
  style=""
>
  <div class="border-x border-zinc-700">
    <div
      class="p-px lg:rounded-[3rem] overflow-hidden bg-gradientTopRight ring-1 ring-zinc-700"
    >
      <div class="bg-black/50 lg:bg-transparent backdrop-blur-3xl p-8 lg:p-20">
        <h2
          class="text-5xl  tracking-tighter font-normal md:text-6xl text-white"
        >
          Selected work
        </h2>
        <div class="divide-y divide-white/10 border-y border-white/10 mt-12">
          {
            igposts.map((postId) => (
              <div class="shrink-0 snap-start w-80">
                <iframe
                  src={`https://www.instagram.com/p/${postId}/embed`}
                  width="100%"
                  height="480"
                  frameborder="0"
                  scrolling="no"
                  allowtransparency="true"
                ></iframe>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
