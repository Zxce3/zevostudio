---
import { igposts } from "@/data/instagram.json";
---

<section class="scroll-mt-24" id="instagram-posts">
  <div class="px-8 md:px-12 py-24 max-w-2xl mx-auto">
    <h2 class="text-xl tracking-tighter font-light text-black">
      Some of Our Work
    </h2>

    <div class="flex flex-col w-full">
      <div
        class="flex flex-col w-full bg-white rounded-3xl pt-4 mt-4"
        aria-labelledby="carousel-label"
        role="region"
        tabindex="0"
      >
        <h2 class="sr-only" hidden="" id="carousel-label">Carousel</h2>
        <span class="sr-only" hidden="" id="carousel-content-label">Carousel</span>

        <div class="items-center justify-center inline-flex mx-auto space-x-2">
          <!-- Previous Button -->
          <button
            id="prev-button-top"
            class="bg-zinc-200 hover:bg-zinc-200 focus:bg-zinc-50 rounded-lg inline-flex items-center text-center text-black p-2 ring-1 ring-zinc-300"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
            </svg>
            <span class="sr-only">Previous</span>
          </button>

          <!-- Next Button -->
          <button
            id="next-button-top"
            class="bg-zinc-200 hover:bg-zinc-200 focus:bg-zinc-50 rounded-lg inline-flex items-center text-center text-black p-2 ring-1 ring-zinc-300"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
            </svg>
            <span class="sr-only">Next</span>
          </button>
        </div>

        <!-- Carousel Content -->
        <div
          class="flex gap-6 overflow-x-scroll scrollbar-hide snap-mandatory snap-x w-full"
          role="listbox"
          aria-labelledby="carousel-content-label"
          tabindex="0"
        >
          {igposts.map((postId, index) => (
            <div class="shrink-0 snap-end w-80 relative flex justify-center" key={index}>
              <div class="w-full h-[500px] bg-gray-200 animate-pulse absolute top-0 left-0" id={`skeleton-${index}`}></div>

              <iframe
                src={`https://www.instagram.com/p/${postId}/embed`}
                width="100%"
                height="500"
                scrolling="no"
                title={`Instagram post ${index + 1}`}
                onLoad={() => setTimeout(() => document.getElementById(`skeleton-${index}`).style.display = 'none', 3000)}
              ></iframe>
            </div>
          ))}
        </div>
      </div>

      <!-- Bottom Controls -->
      <div class="flex justify-between mt-4">
        <!-- Previous Button -->
        <button
          id="prev-button-bottom"
          class="bg-zinc-200 hover:bg-zinc-200 focus:bg-zinc-50 rounded-lg inline-flex items-center text-center text-black p-2 ring-1 ring-zinc-300"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
          </svg>
          <span class="sr-only">Previous</span>
        </button>

        <!-- Next Button -->
        <button
          id="next-button-bottom"
          class="bg-zinc-200 hover:bg-zinc-200 focus:bg-zinc-50 rounded-lg inline-flex items-center text-center text-black p-2 ring-1 ring-zinc-300"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="sr-only">Next</span>
        </button>
      </div>
    </div>
  </div>
  <script>
    function scrollCarousel(amount) {
      document.querySelector('#instagram-posts .overflow-x-scroll').scrollBy({ left: amount, behavior: 'smooth' });
    }

    document.getElementById('next-button-top').addEventListener('click', () => {
      scrollCarousel(300);
    });
    document.getElementById('prev-button-top').addEventListener('click', () => {
      scrollCarousel(-300);
    });
    document.getElementById('next-button-bottom').addEventListener('click', () => {
      scrollCarousel(300);
    });
    document.getElementById('prev-button-bottom').addEventListener('click', () => {
      scrollCarousel(-300);
    });

    document.querySelectorAll('iframe').forEach((iframe, index) => {
      iframe.addEventListener('load', () => {
          document.getElementById(`skeleton-${index}`).style.display = 'none';
        // setTimeout(() => {
        // }, 3000);
      });
    });
  </script>
</section>